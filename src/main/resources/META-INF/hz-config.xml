<?xml version="1.0" encoding="UTF-8"?>

<hazelcast xmlns="http://www.hazelcast.com/schema/config" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.hazelcast.com/schema/config http://www.hazelcast.com/schema/config/hazelcast-config-5.3.xsd">

    <cluster-name>development</cluster-name>

    <network>
        <port auto-increment="true">6900</port>
        <join>
            <auto-detection enabled="true" />
            <multicast enabled="true">
                <multicast-port>2904</multicast-port>
                <multicast-group>224.2.2.4</multicast-group>
            </multicast>
        </join>
    </network>
    
    <partition-group enabled="true" group-type="HOST_AWARE"/>

    <executor-service>
        <pool-size>4</pool-size>
        <queue-capacity>20</queue-capacity>
    </executor-service>

    <scheduled-executor-service>
        <pool-size>4</pool-size>
        <capacity>20</capacity>
    </scheduled-executor-service>

</hazelcast>
           